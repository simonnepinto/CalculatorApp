<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textSize="50sp"
        android:textColor="@color/grey"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:text="0"
        android:textColor="@color/white"
        android:gravity="end"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="460dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/output"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/button1"
            android:layout_alignBottom="@id/button1"
            android:layout_marginLeft="3dp"
            android:textSize="20sp"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/button2"
            android:layout_alignBottom="@id/button2"
            android:layout_marginLeft="3dp"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/button1"
            android:layout_alignStart="@id/button1"
            android:layout_alignLeft="@id/button1"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/button2"
            android:layout_toRightOf="@id/button4"
            android:layout_alignBottom="@id/button4"
            android:layout_marginLeft="3dp"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/button3"
            android:layout_toRightOf="@id/button5"
            android:layout_alignBottom="@id/button5"
            android:layout_marginLeft="3dp"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/button4"
            android:layout_alignStart="@id/button4"
            android:layout_alignLeft="@id/button4"
            android:text="7"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/button5"
            android:layout_toRightOf="@id/button7"
            android:layout_alignBottom="@id/button7"
            android:layout_marginLeft="3dp"
            android:text="8"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/button6"
            android:layout_toRightOf="@id/button8"
            android:layout_alignBottom="@id/button8"
            android:layout_marginLeft="3dp"
            android:text="9"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/buttonDec"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button7"
            android:layout_alignStart="@id/button7"
            android:layout_alignLeft="@id/button7"
            android:text="."
            android:textSize="20sp"></Button>

        <Button
            android:id="@id/button0"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/buttonDec"
            android:layout_marginLeft="3dp"
            android:layout_below="@id/button9"
            android:text="0"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/button3"
            android:layout_alignBottom="@id/button3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:text="+"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/subButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/addButton"
            android:layout_toRightOf="@id/button6"
            android:layout_alignBottom="@id/button6"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:text="-"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/mulButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/subButton"
            android:layout_toRightOf="@id/button9"
            android:layout_alignBottom="@id/button9"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:text="*"
            android:textSize="20sp"></Button>

        <Button
            android:id="@+id/divButton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/mulButton"
            android:layout_toRightOf="@id/button0"
            android:layout_alignBottom="@id/button0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:text="/"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ButtonRightP"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/buttonDec"
            android:layout_alignStart="@id/button7"
            android:layout_alignLeft="@id/button7"
            android:text="("
            android:textSize="20sp" />

        <Button
            android:id="@+id/ButtonLeftP"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/buttonDec"
            android:layout_alignBottom="@id/ButtonRightP"
            android:layout_toRightOf="@id/ButtonRightP"
            android:layout_marginLeft="3dp"
            android:text=")"
            android:textSize="20sp" />

        <Button
            android:id="@id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/button0"
            android:layout_alignBottom="@id/ButtonRightP"
            android:layout_toRightOf="@id/buttonDec"
            android:text="C"
            android:textSize="20sp"
            android:layout_marginLeft="3dp"/>

        <Button
            android:id="@id/buttonEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divButton"
            android:layout_toRightOf="@id/buttonClear"
            android:text="="
            android:textSize="20sp"
            android:backgroundTint="#B5608E"
            android:layout_marginLeft="3dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>